
<h1>Dashboards</h1>

<section>
  <h2>Today</h2>
  <% if @today_entry %>
    <p>Date: <%= @today_entry.date %></p>
    <p>Notes: <%= @today_entry.notes.presence || "-" %></p>
    <p><%= link_to "Open entry", entry_path(@today_entry) %></p>
  <% else %>
    <p>No entry for today yet.</p>
  <% end %>
</section>

<section>
  <h2>Last 7 days - macros</h2>
  <table>
    <caption class="sr-only">Macro Totals for the Last 7 Days</caption>
    <thead>
      <tr>
        <th>Date</th>
        <th>Calories</th>
        <th>Protein(g)</th>
        <th>Carbs(g)</th>
        <th>Fats(g)</th>
      </tr>
    </thead>
    <tbody>
      <% @macro_by_day.each do |row| %>
        <tr>
          <td><%= row.day %></td>
          <td><%= row.calories %></td>
          <td><%= row.protein_g %></td>
          <td><%= row.carbs_g %></td>
          <td><%= row.fats_g %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section>
 <h2>Reminders</h2>
 <ul>
  <% @reminders.each do |r| %>
   <li>
    <strong>
      <%= r.message %>
    </strong> 
      <span>&middot; <%= r.frequency %></span>
      <span>&middot; <%= r.time_of_day %></span>
    </li>
  <% end %>
 </ul>
</section>

<section>
 <h2>Supplements</h2>
 <ul>
  <% @supplements.each do |s| %>
   <li>
    <%= s.name %> 
    <span>&middot; <%= s.dosage %></span> 
    <span>&middot; <%= s.frequency %></span>
   </li>
  <% end %>
 </ul>
</section>
